<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color15</item>
        <item name="colorPrimaryDark">@color/color8</item>
        <item name="colorAccent">@color/color6</item>

        <item name="android:textColor">?colorPrimary</item>
        <item name="android:statusBarColor">@color/color0</item>
        <item name="android:scrollbarThumbHorizontal">?colorAccent</item>
        <item name="android:scrollbarThumbVertical">?colorAccent</item>
        <item name="android:background">@color/color0</item>

        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:editTextStyle">@style/EditText</item>
        <item name="android:buttonStyle">@style/Button.Default</item>
        <item name="android:toolbarStyle">@style/Toolbar</item>
    </style>


    <style name="TextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textColorHint">?colorPrimaryDark</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textColorHint">?colorPrimaryDark</item>
    </style>

    <style name="Button.Default" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@drawable/btn_ripple</item>
    </style>

    <style name="Button.Dense" parent="Button.Default">
        <item name="android:minHeight">32dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Button.Dialog" parent="Button.Default">
        <item name="android:minWidth">64dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:titleTextAppearance">@style/Toolbar.TextAppearance.Title</item>
        <item name="android:background">?colorPrimaryDark</item>
    </style>

    <style name="Toolbar.TextAppearance.Title" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">?colorPrimary</item>
    </style>

</resources>
